{
  "ci": {
    "collect": {
      "staticDistDir": "./dist",
      "url": [
        "http://localhost:8080/index.html",
        "http://localhost:8080/research.html",
        "http://localhost:8080/datasets.html",
        "http://localhost:8080/tools.html",
        "http://localhost:8080/about.html",
        "http://localhost:8080/contact.html"
      ]
    },
    "assert": {
      "assertions": {
        "performance": ["warn", { "minScore": 0.9 }],
        "accessibility": ["error", { "minScore": 1 }],
        "best-practices": ["error", { "minScore": 0.9 }],
        "seo": ["error", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}

